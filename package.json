{
  "name": "bursa-textile-website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "analyze": "npm run build:analyze && npx vite-bundle-analyzer dist",
    "performance": "npm run build:prod && lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test:performance": "npm run build:prod && npm run preview:prod & sleep 5 && lighthouse http://localhost:3000 --output=json --output-path=./performance-report.json"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
