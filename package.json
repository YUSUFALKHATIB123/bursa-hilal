    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.510.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.1",
    "sharp": "^0.34.3",
    "swiper": "^11.2.10",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "terser": "^5.43.1"
  },
  "devDependencies": {
